<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Portal</title>
    <link href="~/img/student logo.png" rel="icon" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        :root {
            --primary-purple: #8A4FFF;
            --light-purple: #F3EFFF;
            --bg-color: #F8F9FE;
            --sidebar-width: 260px;
        }

        body {
            background-color: var(--bg-color);
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            overflow-x: hidden;
        }

        /* --- Sidebar Styles --- */
        .sidebar {
            width: var(--sidebar-width);
            height: 95vh;
            position: fixed;
            left: 20px;
            top: 2.5vh;
            background: var(--primary-purple);
            border-radius: 30px;
            color: white;
            padding: 30px 15px;
            display: flex;
            flex-direction: column;
            box-shadow: 0 10px 30px rgba(138, 79, 255, 0.3);
        }

        .sidebar-brand {
            text-align: center;
            margin-bottom: 40px;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.7);
            padding: 12px 20px;
            border-radius: 12px;
            margin-bottom: 8px;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 15px;
        }

            .nav-link:hover, .nav-link.active {
                background: rgba(255, 255, 255, 0.2);
                color: white;
            }

        /* --- Main Content Area --- */
        .main-wrapper {
            margin-left: calc(var(--sidebar-width) + 50px);
            padding: 30px 30px 30px 0;
        }

        /* Top Header */
        .top-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .search-bar {
            background: white;
            border: none;
            border-radius: 15px;
            padding: 10px 20px;
            width: 350px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        }

        /* Dashboard Cards */
        .glass-card {
            background: white;
            border-radius: 25px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.02);
            padding: 20px;
            height: 100%;
        }

        .welcome-banner {
            background: linear-gradient(135deg, #A87FFF, #8A4FFF);
            border-radius: 30px;
            padding: 40px;
            color: white;
            position: relative;
            overflow: hidden;
            margin-bottom: 30px;
        }

        .btn-purple {
            background: var(--primary-purple);
            color: white;
            border-radius: 12px;
            padding: 8px 25px;
            border: none;
        }

            .btn-purple:hover {
                background: #7139e2;
                color: white;
            }

        .instructor-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: -10px;
            border: 2px solid white;
        }
    </style>
</head>
<body>

    <aside class="sidebar">
        <div class="sidebar-brand">
            <i class="bi bi-mortarboard-fill fs-1"></i>
        </div>

        <nav class="nav flex-column">
            <a class="nav-link active" href="#"><i class="bi bi-grid-fill"></i> Dashboard</a>
            <a class="nav-link" href="#"><i class="bi bi-credit-card"></i> Payment Info</a>
            <a class="nav-link" href="#"><i class="bi bi-pencil-square"></i> Registration</a>
            <a class="nav-link" href="#"><i class="bi bi-book"></i> Courses</a>
            <a class="nav-link" href="#"><i class="bi bi-calendar-x"></i> Drop Semester</a>
            <a class="nav-link" asp-controller="StudentAPI" asp-action="Index"><i class="bi bi-award"></i> Result</a>
        </nav>

        <div class="mt-auto">
            <a asp-controller="Account" asp-action="Login" class="nav-link text-white-50">
                <i class="bi bi-box-arrow-left"></i> Logout
            </a>
        </div>
    </aside>

    <div class="main-wrapper">
        <header class="top-header">
            <input type="text" class="search-bar" placeholder="Search...">

            <div class="d-flex align-items-center gap-3">
                <div class="text-end">
                    <div class="fw-bold">John Doe</div>
                    <small class="text-muted">3rd year</small>
                </div>
                <img src="https://ui-avatars.com/api/?name=John+Doe&background=8A4FFF&color=fff" class="rounded-circle" width="45">
                <i class="bi bi-bell fs-5 text-muted ms-2"></i>
            </div>
        </header>

        <div class="container-fluid p-0">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>