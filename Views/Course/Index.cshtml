@model IEnumerable<StudentManagementSystem.ViewModels.Course_VM>

@{
    ViewData["Title"] = "Course List";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Course List</h3>
        <a asp-action="Create" class="btn btn-primary">
            + Add New Course
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">

            <table class="table table-bordered table-hover">
                <thead class="table-dark text-center">
                    <tr>
                        <th>#</th>
                        <th>Course Code</th>
                        <th>Course Name</th>
                        <th>Description</th>
                        <th>Credits</th>
                        <th style="width: 180px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int count = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@count</td>
                                <td>@item.CourseCode</td>
                                <td>@item.CourseName</td>
                                <td>@item.Description</td>
                                <td class="text-center">@item.Credits</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.CoursePkid" class="btn btn-sm btn-warning">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CoursePkid"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this course?');">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                No courses found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
