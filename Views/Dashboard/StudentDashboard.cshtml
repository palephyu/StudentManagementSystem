@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "_StudentLayout";
}

<div class="container mt-4">
    <h2 class="mb-4">🎓 Student Dashboard</h2>

    <div class="welcome-banner d-flex justify-content-between align-items-center">
        <div>
            <p class="mb-1 opacity-75">September 4, 2023</p>
            <h1 class="fw-bold">Welcome back, John!</h1>
            <p class="mb-0">Always stay updated in your student portal</p>
        </div>
        <i class="bi bi-backpack2 fs-1 opacity-25"></i>
    </div>

    <h5 class="fw-bold mb-3">Finance</h5>
    <div class="row mb-4 g-4">
        <div class="col-md-4">
            <div class="glass-card text-center">
                <i class="bi bi-stack fs-2 text-primary mb-2"></i>
                <h5>My Courses</h5>
                <p>View enrolled courses</p>
                <a asp-controller="Course" asp-action="Index" class="btn btn-primary">
                    View
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="glass-card text-center border border-primary">
                <i class="bi bi-cash-stack fs-2 text-primary mb-2"></i>
                <h5>My Classes</h5>
                <p>View class schedule</p>
                <a asp-controller="Class" asp-action="Index" class="btn btn-success">
                    View
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="glass-card text-center">
                <i class="bi bi-bar-chart-fill fs-2 text-primary mb-2"></i>
                <h5>My Grades</h5>
                <p>Check results</p>
                <a href="#" class="btn btn-warning">
                    View
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between mb-3">
                <h5 class="fw-bold">Enrolled Courses</h5>
                <a href="#" class="text-primary text-decoration-none small">See all</a>
            </div>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="glass-card" style="background: #EFE9FF;">
                        <h6 class="fw-bold">Object oriented programming</h6>
                        <button class="btn btn-purple btn-sm mt-3">View</button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="glass-card" style="background: #F3EFFF;">
                        <h6 class="fw-bold">Fundamentals of database systems</h6>
                        <button class="btn btn-purple btn-sm mt-3">View</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <h5 class="fw-bold mb-3">Daily Notice</h5>
            <div class="glass-card">
                <div class="mb-4">
                    <h6 class="fw-bold mb-1">Prelim payment due</h6>
                    <p class="small text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                    <a href="#" class="text-primary small text-decoration-none">See more</a>
                </div>
                <div>
                    <h6 class="fw-bold mb-1">Exam schedule</h6>
                    <p class="small text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                    <a href="#" class="text-primary small text-decoration-none">See more</a>
                </div>
            </div>
        </div>
    </div>

   
</div>
