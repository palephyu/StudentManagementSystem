@model IEnumerable<StudentManagementSystem.ViewModels.Student_VM>

@{
    ViewData["Title"] = "Student List";
}
@using Microsoft.AspNetCore.Http
@{
    var role = Context.Session.GetString("UserRole");

    if (role == "Teacher")
    {
        Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml"; // Admin or others
    }
}

<h2 class="mt-3">Student List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Add New Student</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Profile</th>
            <th>Student ID</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Email</th>
            <th>Enrollment Date</th>
            <th width="200">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>
                    @if (s.ImageFile != null)
                    {
                        <img src="@s.ImageFile" alt="Profile Image" width="50" height="50" class="rounded-circle" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@s.StudentId</td>
                <td>@s.FullName</td>
                <td>@s.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                <td>@s.Gender</td>
                <td>@s.Phone</td>
                <td>@s.Address</td>
                <td>@s.Email</td>
                <td>@s.EnrollmentDate.ToString("yyyy-MM-dd")</td>
             

                <td>
                    <a asp-action="Details" asp-route-id="@s.StudentPkid" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@s.StudentPkid" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@s.StudentPkid" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
