@model IEnumerable<StudentManagementSystem.ViewModels.Teacher_VM>
@{
    ViewData["Title"] = "Teachers";
}
<h2>Teachers</h2>

<p><a asp-action="Create" class="btn btn-primary">Create New Teacher</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Specialization</th>
            <th>Hire Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TeacherPkid</td>
                <td>@t.FullName</td>
                <td>@t.Email</td>
                <td>@t.Phone</td>
                <td>@t.Specialization</td>
                <td>@t.HireDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.TeacherPkid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@t.TeacherPkid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@t.TeacherPkid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
